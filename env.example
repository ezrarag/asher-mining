# Firebase Configuration
# Copy this file to .env.local and fill in your Firebase credentials

# Option 1: Service Account (Recommended for Production)
# Download service account JSON from Firebase Console > Project Settings > Service Accounts
# Paste the entire JSON as a single-line string here
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}'

# Option 2: Project ID (Alternative)
# Set this if using Application Default Credentials or GOOGLE_APPLICATION_CREDENTIALS env var
NEXT_PUBLIC_FIREBASE_PROJECT_ID='your-project-id'

# Client-side Firebase Config (optional, for future client-side features)
NEXT_PUBLIC_FIREBASE_API_KEY='your-api-key'
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN='your-project.firebaseapp.com'
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET='your-project.appspot.com'
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID='your-sender-id'
NEXT_PUBLIC_FIREBASE_APP_ID='your-app-id'

